{{ define "title" }}Cart &bull; Upframe{{ end }}
{{ define "content" }}

{{ $credit := .Session.Credit }}
{{ with .Data }}
<main role="main" class="floating-box checkout">
    <h1>Cart</h1>

    {{ if .Products }}
    <table id="cart">
        <thead>
            <tr>
                <th>QTY</th>
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        {{ range $product := .Products }}
        <tr data-id="{{ $product.ID }}">
            <td data-name="Quantity">{{ $product.Quantity }}</td>
            <td data-name="Name">{{ $product.Name }}</td>
            <td data-name="Price">{{ $product.Price }}</td>
            <td><button class="btnRemove">&#215;</button></td>
        </tr>
        {{ end }}
    </table>

    <div id="checkout-box">
        <span id="price">Total: â‚¬ <span id="value">{{ .Total }}</span></span>
    </div>

    <a href="/checkout/discounts"><button>Continue &rarr;</button></a>
    {{ else }}
    <p>The car is empty. Head to the <a href="/store">store</a> and start adding some items!</p>
    {{ end }}
</main>
{{ end }}
{{ end }}
