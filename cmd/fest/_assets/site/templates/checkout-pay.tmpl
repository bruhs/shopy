{{ define "title" }}Checkout &bull; Upframe{{ end }}
{{ define "content" }}

{{ $credit := .Session.Credit }}
{{ with .Data }}
<main role="main" class="floating-box checkout">
    <h1>Checkout</h1>

    <table id="summary">
        <thead>
            <tr>
                <th>Qty</th>
                <th>Name</th>
                <th>Price</th>

            </tr>
        </thead>
        {{ range $product := .Cart.Products }}
        <tr data-id="{{ $product.ID }}">
            <td data-name="Quantity">{{ $product.Quantity }}x</td>
            <td data-name="Name">{{ $product.Name }}</td>
            <td data-name="Price">{{ $product.Price }}</td>
        </tr>
        {{ end }}
    </table>

    <span id="subtotal">Subtotal: € {{ .Cart.Total }}</span>
    <span id="subtotal">Promocode: € {{ .Total }}</span>
    <span id="subtotal">Credits: € {{ .Total }}</span>
    <span id="subtotal">Total: € {{ .Total }}</span>

    <input type="radio" name="payment" value="male" checked><label>Credit Card</label>
    <input type="radio" name="payment" value="female"><label>PayPal</label>

    <form action="/your-charge-code" method="POST" id="payment-form">
      <span class="payment-errors"></span>

      <div class="form-row">
        <label>
          <span>Card Number</span>
          <input type="text" size="20" data-stripe="number">
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Expiration (MM/YY)</span>
          <input type="text" size="2" data-stripe="exp_month">
        </label>
        <span> / </span>
        <input type="text" size="2" data-stripe="exp_year">
      </div>

      <div class="form-row">
        <label>
          <span>CVC</span>
          <input type="text" size="4" data-stripe="cvc">
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Billing Zip</span>
          <input type="text" size="6" data-stripe="address_zip">
        </label>
      </div>

      <input type="submit" class="submit" value="Submit Payment">
    </form>
</main>
{{ end }}
{{ end }}
